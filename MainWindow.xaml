<Window x:Class="Tic_Tac_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe"
        mc:Ignorable="d"
        Title="Tic Tac Toe" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="513*"/>
            <ColumnDefinition Width="216*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Tic Tac Toe" HorizontalAlignment="Left" Margin="58,10,0,0" VerticalAlignment="Top" Height="42" Width="140" Grid.ColumnSpan="2" FontSize="20"/>
        <Button Tag ="0,0" Content="" HorizontalAlignment="Left" Margin="58,156,0,0" VerticalAlignment="Top" Height="70" Width="96" Grid.ColumnSpan="2" Click="Button_Top_Left" Name="Button_Top_Left_Name" IsEnabled="false"/>
        <Button Tag ="0,1" Content="" HorizontalAlignment="Left" Margin="101,156,0,0" VerticalAlignment="Top" Height="70" Width="95" Grid.Column="1" Click="Button_Top_Mid" Name="Button_Top_Mid_Name" IsEnabled="false"/>
        <Button Tag ="0,2" Content="" HorizontalAlignment="Left" Margin="211,156,0,0" VerticalAlignment="Top" Height="70" Width="96" Grid.Column="1" Click="Button_Top_Right" Name="Button_Top_Right_Name" IsEnabled="false"/>
        <Button Tag ="1,0" Content="" HorizontalAlignment="Left" Margin="58,243,0,0" VerticalAlignment="Top" Height="70" Width="96" Grid.ColumnSpan="2" Click="Button_Mid_Left" Name="Button_Mid_Left_Name" IsEnabled="false"/>
        <Button Tag ="1,1" Content="" HorizontalAlignment="Left" Margin="101,243,0,0" VerticalAlignment="Top" Height="70" Width="95" Grid.Column="1" Click="Button_Mid_Mid" Name="Button_Mid_Mid_Name" IsEnabled="false"/>
        <Button Tag ="1,2" Content="" HorizontalAlignment="Left" Margin="211,243,0,0" VerticalAlignment="Top" Height="70" Width="96" Grid.Column="1" Click="Button_Mid_Right" Name="Button_Mid_Right_Name" IsEnabled="false"/>
        <Button Tag ="2,0" Content="" HorizontalAlignment="Left" Margin="58,330,0,0" VerticalAlignment="Top" Height="70" Width="96" Grid.ColumnSpan="2" Click="Button_Bot_Left" Name="Button_Bot_Left_Name" IsEnabled="false"/>
        <Button Tag ="2,1" Content=""  HorizontalAlignment="Left" Margin="101,330,0,0" VerticalAlignment="Top" Height="70" Width="95" Grid.Column="1" Click="Button_Bot_Mid" Name="Button_Bot_Mid_Name" IsEnabled="false"/>
        <Button Tag ="2,2" Content="" HorizontalAlignment="Left" Margin="211,330,0,0" VerticalAlignment="Top" Height="70" Width="96" Grid.Column="1" Click="Button_Bot_Right" Name="Button_Bot_Right_Name" IsEnabled="false"/>
        <TextBox Name="PlayerXTextBox" HorizontalAlignment="Left" Margin="35,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60" TextChanged="TextBox_X_Player" Grid.Column="1"/>
        <TextBox Name="PlayerOTextBox" HorizontalAlignment="Left" Margin="174,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" TextChanged="TextBox_o_Player" Grid.Column="1"/>
        <Label Content="X Player" HorizontalAlignment="Left" Margin="56,64,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="O Player" HorizontalAlignment="Left" Margin="121,64,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,111,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Text="Choose starting player">
            <ComboBoxItem Content="Player X"/>
            <ComboBoxItem Content="Player O"/>
        </ComboBox>
        <Label Grid.Column="1" Content="Current Player:" HorizontalAlignment="Left" Margin="174,91,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="183,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="70" IsReadOnly="True" TextChanged="TextBox_Current_Player" Name="TextBox_Current_Player_Tracker"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="405,278,0,0" VerticalAlignment="Top" Height="35" Width="70" Click="ButtonReset" Name="Reset" >
            <Button Content="Button"/>
        </Button>
        <Button Grid.Column="1" Content="Exit" HorizontalAlignment="Left" Margin="405,330,0,0" VerticalAlignment="Top" Height="35" Width="70" Click="ButtonExit" Name="Exit"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="414,191,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="54" Name="TextBox_X_Wins"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="414,214,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="54" Name="TextBox_O_Wins"/>
        <Label Grid.Column="1" Content="X Wins:" HorizontalAlignment="Left" Margin="365,187,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="O Wins:" HorizontalAlignment="Left" Margin="365,210,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
