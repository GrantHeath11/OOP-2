<Window x:Class="In_Class_Exercise___3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:In_Class_Exercise___3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="ProductNameTextBox" Width="200" Text="Enter Product Name" Margin="0,0,0,10"/>
            <TextBox x:Name="QuantityTextBox" Width="200" Text="Enter Quantity" Margin="0,0,0,10" TextChanged="QuantityTextBox_TextChanged"/>
            <StackPanel Orientation="Horizontal" Margin="285,0,10,10">
                <Button x:Name="SaveButton" Content="Save" Width="100" Click="SaveButton_Click"/>
                <Button x:Name="LoadButton" Content="Load" Width="100" Margin="10,0,0,0" Click="LoadButton_Click"/>
            </StackPanel>
            <ListBox x:Name="PersonListBox" Width="200" Height="100"/>
            <TextBox x:Name="Description" Width="200" Text="Description"/>
        </StackPanel>
    </Grid>
</Window>
